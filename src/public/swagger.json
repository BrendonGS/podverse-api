            "items": {
              "type": "string"
            }
          },
          {
            "name": "slug",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Author"
            }
          },
          "404": {
            "description": "Author not found"
          }
        }
      }
    },
    "/author/{authorId}": {
