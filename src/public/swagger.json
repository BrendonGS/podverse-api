          "author"
        ],
        "summary": "Find authors by fields",
        "description": "Returns an array of authors",
        "operationId": "getAuthors",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "episodes",
            "in": "query",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "query",
            "type": "string"
          },
          {
            "name": "mediaRefs",
